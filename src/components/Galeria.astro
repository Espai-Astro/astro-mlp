---
import { galeria } from '../lib/data';
import type { artT } from '../lib/types';
---

<div class='flex flex-col gap-12 px-6'>
  <h1 class='text-center text-4xl'>Galeria</h1>
  <div class='grid grid-cols-1 lg:grid-cols-2 gap-12'>
    {
      galeria.map(({ src, alt, title, descripcio }: artT) => (
        <>
          <div class='group'>
            <div class='relative'>
              <img
                class='relative z-10 w-full mx-auto rounded-lg transition-all duration-300 group-hover:-translate-x-3'
                src={src}
                alt={alt}
                title={title}
              />
              <div class='absolute left-0 top-0 w-full h-full bg-black rounded-lg transition-all duration-500 group-hover:translate-x-2 group-hover:translate-y-4'>
                ombra
              </div>
            </div>
            <div class='relative p-1 transition-all  duration-300 group-hover:translate-y-3 group-hover:translate-x-2'>
              <p>{title}</p>
              <p class='relative transition-all duration-1000 opacity-0 group-hover:opacity-100 px-2 text-sm'>
                {descripcio}
              </p>
            </div>
          </div>
        </>
      ))
    }
  </div>
</div>
