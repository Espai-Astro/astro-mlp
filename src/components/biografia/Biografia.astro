---
import gargot from '../../assets/svg/scribble.svg';
import { TextBiografia } from './';
import { textosBiografia } from '../../lib/data';
import type { textBiografiaT } from '../../lib/types';
import { baseUrl } from '../../lib/const/baseUrl';
const mida = textosBiografia.length;
const srcGargot = gargot.src;
const classesClaus = 'font-bold text-red-500';
---

<div class='flex flex-col gap-16 items-center px-6'>
  <div class='flex flex-col gap-14'>
    <div class='flex flex-col lg:flex-row lg:gap-3'>
      <h1 class='titol'>Biografia</h1>
      <img src={srcGargot} class='ombra' alt='gargot' />
    </div>

    <div
      class='flex flex-col gap-16 py-4 px-8 lg:py-12 lg:px-20 border-zinc-200 rounded-xl border-2'>
      {
        textosBiografia.map((textBiografia: textBiografiaT, index) => (
          <TextBiografia
            textBiografia={textBiografia}
            mida={mida}
            index={index}
            classesClaus={classesClaus}
          />
        ))
      }
    </div>
  </div>
  <a href={baseUrl} class='w-full lg:w-1/4'>
    <button
      class='w-full border-2 rounded-xl border-zinc-200 hover:bg-zinc-200 focus:border-neutral-800 py-1'
      >Tornar a Inici</button
    >
  </a>
</div>
